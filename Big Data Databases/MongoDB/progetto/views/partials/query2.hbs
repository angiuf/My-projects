<!-- 2 QUERY -->
<div class="col-sm">
    <div class="card mb-2">
        <div class="card-header" style="background-color: #52796f; color: white; font-weight: bold">
            2. Number of people vaccinated for every city
        </div>
        <div class="card-body">
            <div class="input-group">
                <div class="container-fluid p-0 mb-2">
                    Here you'll find the aggregated number for vaccinated people for every city in the database
                </div>
                <form class="form-inline mb-0" action="/q2" method="POST">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary">Calculate</button>
                    </div>
                </form>
            </div>
            {{#if post.outDiv_query2}}
                <div class="container-fluid mt-2 px-1 bg-light border border-2 rounded" style="display: block">
                    {{breaklines post.outDiv_query2}}
                </div>
            {{/if}}
        </div>
    </div>
</div>
